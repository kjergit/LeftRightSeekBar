<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CenterSeekBar">
        <attr name="maxProgress" format="integer" /> <!--max progress -->
        <attr name="minProgress" format="integer" /> <!-- min minProgress -->
        <attr name="width" format="dimension" /><!-- seekbar width needs <= seekbar veiw layout_width -->
        <attr name="centerState" format="boolean" /> <!-- 是否 0 在中心 -->
        <attr name="backColor" format="color" /><!-- 背景 拉条杆 底色 -->
        <attr name="backHeight" format="dimension" /><!-- 背景 拉条杆 height -->
        <attr name="backFrameColor" format="color" /><!-- 背景 圆角边框 描边-->
        <attr name="backFrameSize" format="dimension" /><!-- 背景 圆角边框 宽度 -->
        <attr name="progressColor" format="color" /><!--progress 进度 颜色-->
        <attr name="progressHeight" format="dimension" /><!--progress height -->
        <attr name="progressMinusColor" format="color" /><!-- 0在中心 时  负数 的颜色 -->
        <attr name="progress" format="integer" /><!--当前 progress-->
        <attr name="thumbNormalRadius" format="dimension" /><!-- thumb 圆 半径 -->
        <attr name="thumbPressRadius" format="dimension" /><!-- thumb 圆 触摸时 半径 -->
        <attr name="thumbColor" format="color" /><!-- thumb 圆 颜色 -->
        <attr name="textSize" format="dimension" /><!--进度字体大小-->
        <attr name="textColor" format="color" /><!--进度字体 颜色-->
        <attr name="textBackColor" format="color" /><!--进度字体 背景 颜色-->
        <attr name="textBackRadius" format="dimension" /><!--进度字体背景 圆角矩形 弧度-->
    </declare-styleable>


    <declare-styleable name="SeekBarView">
        <attr name="SeekBarView_S_maxProgress" format="integer" /> <!--max progress -->
        <attr name="SeekBarView_S_minProgress" format="integer" /> <!-- min minProgress -->
        <attr name="SeekBarView_S_width" format="dimension" /><!-- seekbar width needs <= seekbar veiw layout_width -->
        <attr name="SeekBarView_S_centerState" format="boolean" /> <!-- 是否 0 在中心 -->

        <attr name="SeekBarView_S_backColor" format="color" /><!-- 背景 拉条杆 底色 -->
        <attr name="SeekBarView_S_backHeight" format="dimension" /><!-- 背景 拉条杆 height -->

        <attr name="SeekBarView_S_backFrameColor" format="color" /><!-- 背景 圆角边框 描边-->
        <attr name="SeekBarView_S_backFrameSize" format="dimension" /><!-- 背景 圆角边框 宽度 -->
        <attr name="SeekBarView_S_progressColor" format="color" /><!--progress 进度 颜色-->
        <attr name="SeekBarView_S_progressHeight" format="dimension" /><!--progress height -->
        <attr name="SeekBarView_S_progressMinusColor" format="color" /><!-- 0在中心 时  负数 的颜色 -->

        <attr name="SeekBarView_S_progress" format="integer" /><!--当前 progress-->
        <attr name="SeekBarView_S_thumbNormalRadius" format="dimension" /><!-- thumb 圆 半径 -->

        <attr name="SeekBarView_S_thumbPressRadius" format="dimension" /><!-- thumb 圆 触摸时 半径 -->
        <attr name="SeekBarView_S_thumbColor" format="color" /><!-- thumb 圆 颜色 -->

        <attr name="SeekBarView_S_textSize" format="dimension" /><!--进度字体大小-->
        <attr name="SeekBarView_S_textColor" format="color" /><!--进度字体 颜色-->
        <attr name="SeekBarView_S_textBackColor" format="color" /><!--进度字体 背景 颜色-->
        <attr name="SeekBarView_S_textBackRadius" format="dimension" /><!--进度字体背景 圆角矩形 弧度-->
        <attr name="SeekBarView_S_textLocation" format="integer" />
    </declare-styleable>

    <declare-styleable name="ExpSwitchView">
        <attr name="switch_background" format="reference" />
        <attr name="slide_button" format="reference" />
        <attr name="switch_state" format="boolean" />
    </declare-styleable>

</resources>